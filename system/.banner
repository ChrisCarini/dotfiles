## Banner Config
_banner_config() {
  # Expose the colors we need in the banner
  B_WHITE=${WHITE}${BACKGROUND_WHITE}
  B_RED_TX=${RED}
  B_BROWN=${YELLOW}
  B_GREEN=${GREEN}${BACKGROUND_GREEN}
  B_RESET=${RESET}
  B_RED_SB=${RED}${BACKGROUND_RED}
  B_UNDERLINE=${UNDERLINE}
  B_NO_UNDERLINE=${NO_UNDERLINE}
}

_banner_config
unset _banner_config


